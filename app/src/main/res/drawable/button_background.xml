<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081" /> <!-- Set the desired pressed color -->
            <corners android:radius="8dp" /> <!-- Set the desired corner radius -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3F51B5" /> <!-- Set the desired default color -->
            <corners android:radius="8dp" /> <!-- Set the desired corner radius -->
        </shape>
    </item>
</selector>
